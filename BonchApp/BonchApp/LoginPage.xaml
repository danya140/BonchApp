<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BonchApp;assembly=BonchApp"
             x:Class="BonchApp.MainPage"
             BackgroundImage="images/login.png">
    
    <StackLayout Padding="30,20,20,20">
        <Label Margin="0,20,0,-5" HorizontalOptions="Center" FontSize="19" TextColor="LightGray" Text="Вход в систему"></Label>
        <Image WidthRequest="100" HeightRequest="20" Source="images/line.png"></Image>
        <Label x:Name="Warning" Margin="0,20,0,-5" HorizontalOptions="Center" FontSize="19" TextColor="LightGray"></Label>
       <Entry x:Name="Entry1" WidthRequest="240" HeightRequest="50" HorizontalOptions="Center" FontSize="20" HorizontalTextAlignment="Center" Placeholder="Логин или почта"/>
        <Entry x:Name="Entry2"  Margin="0,5,0,0" WidthRequest="240" HeightRequest="50" HorizontalOptions="Center" FontSize="20" HorizontalTextAlignment="Center" Placeholder="Пароль" IsPassword = "true"></Entry>
        <Button Margin="0,10,0,0" x:Name="Button1" WidthRequest="200" HeightRequest="55" FontSize="20"  HorizontalOptions="Center" Text="Войти" BorderColor="White" BorderWidth="3" TextColor="##FF353535" BorderRadius="10" ></Button>
    </StackLayout>

</ContentPage>